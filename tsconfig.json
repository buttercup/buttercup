        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "target": "es2020"
    },
    "include": ["applications/*/src/**/*.ts", "packages/*/src/**/*.ts"]
}
